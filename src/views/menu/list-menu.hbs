<div class="container-listas">

    <div class="modal fade" id="nuevo" data-backdrop="static" tabindex="-1" role="dialog"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
    </div>
    <div class="modal fade" id="edicion" data-backdrop="static" tabindex="-1" role="dialog"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
    </div>
    <div class="row">
        <div class="col md-12 m2 offset-m1">        
            
                <h2>
                    <button type="button" onclick="ModalNuevo('/menu/new-menu/{{empresa.id}}')" class="btn btn-success mb-2"
                        data-toggle="modal">
                        <i class="fa fa-plus"></i>
                    </button>             
                    Cartilla de : {{empresa.name}} - {{empresa.ruc}}                     
                    <div class="pull-right-right">
                        <a href="/company/list-company">
                            <button type="button" class="btn btn-primary mb-2">
                            <i class="fa fa-cog"></i>
                            </button>
                        </a>     
                    </div>           
                </h2>
            <table class="table table-striped  table-bordered    responsive">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripci√≥n </th>
                        <th scope="col">Precio</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Op.</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each menu }}
                    <tr>
                        <th scope="row">{{inc @index}}</th>
                        <td>{{name}}</td>
                        <td>{{description}}</td>
                        <td>{{price}}</td>
                        <td>
                            {{#if image}}
                                <img src="/upload/{{image}}" class="logo">
                            {{else}}
                            -
                            {{/if}}
                        </td>
                        <td>
                            {{#if state}}
                            <i class="fa fa-chevron-circle-down success" aria-hidden="true"></i>
                            {{else}}
                            <i class="fa fa-times-circle danger" aria-hidden="true"></i>
                            {{/if}}
                        </td>
                        <td>
                            <button type="button" onclick="ModalEditar('/menu/edit-menu/{{_id}}')"
                                class="btn btn-sm btn-warning" data-toggle="modal">
                                <i class="fa fa-pencil"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>


        </div>
    </div>
</div>