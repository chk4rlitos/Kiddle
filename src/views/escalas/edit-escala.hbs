<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form action="/escalas/edit-escala/{{escalas.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="PUT">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Editar Escala: {{escalas.name}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" required
                        value="{{escalas.name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="description" class="form-control" placeholder="Descripcion" required
                        value="{{escalas.description}}">
                </div>
                <div class="form-group">
                    <input type="file" name="image" placeholder="file" class="form-control"><a target="_blank" href="/upload/{{escalas.image}}"> {{escalas.image}} </a></file>
                </div>                
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" name="state"  class="form-check-input"  
                            {{#if escalas.state}} checked {{/if}}>
                        <label>Activo ?</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">Actualizar</button>
            </div>
        </form>
    </div>
</div>