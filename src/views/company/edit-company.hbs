<div class="modal-dialog" role="document">
    <div class="modal-content">
        
        <form action="/company/edit-company/{{company._id}}?_method=PUT" method="POST" enctype="multipart/form-data" id="ValidaCompany" >
            <input type="hidden" name="_method" value="PUT">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Editar: {{company.name}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>                
            </div>  

            <input type="hidden" name="selectedescala" value="{{escalaSelected}}">

            <div class="modal-body">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" required
                        value="{{company.name}}">
                </div>
                <div class="form-group">
                    <input type="text" name="ruc" class="form-control" placeholder="RUC" required
                        value="{{company.ruc}}">
                </div>
                <div class="form-group">
                    <input type="text" name="direction" class="form-control" placeholder="Direccion" required
                        value="{{company.direction}}">
                </div>       
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" name="eboleta"  class="form-check-input"  
                            {{#if company.eboleta  }} checked {{/if}}>
                        <label>¿ Emite Boleta ?</label>
                    </div>
                </div>     
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" name="efactura"  class="form-check-input"  
                            {{#if company.efactura}} checked {{/if}}>
                        <label>¿ Emite Factura ?</label>
                    </div>
                </div>                             
                <div class="form-group">
                    <input type="file" name="image" placeholder="file" class="form-control"><a target="_blank" href="/upload/{{company.image}}"> {{company.image}} </a></file>
                </div>       
                <div class="form-group">
                    <select class="custom-select mr-sm-2 mb-4" id="inlineFormCustomSelect" name="escalaId">   
                        {{#each escalasAll}}        
                            {{#select category }}
                                <option  value="{{_id}}"> {{name}}</option>     
                            {{/select}}                  
                        {{/each}}                                               
                    </select>
                 </div>                            
                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" name="state"  class="form-check-input"  
                            {{#if company.state}} checked {{/if}}>
                        <label>Activo ?</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-warning">Actualizar</button>
            </div>
        </form>
    </div>
</div>